# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

#Actividades
GET     /actividades/                           Actividades.index
GET     /actividades/create                     Actividades.create
POST   /actividades/store                       Actividades.store
GET    /actividades/{id}/edit                   Actividades.edit

#Categorias
GET     /categorias/                            Categorias.index
GET     /categorias/create/{id}                 Categorias.create
POST    /categorias/store                       Categorias.store


# Catch all
*       /{controller}/{action}                  {controller}.{action}
